<h1>Sign up!</h1>

<%= form_for @user do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.text_field :password %>

	<%= f.submit "Sign Me Up!" %>
	<br>

	<strong><%= link_to "Continue as Guest", menu_path %></strong>
<% end %>